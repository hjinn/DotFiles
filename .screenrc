#disable startup message
startup_message off

#disable visual bell
vbell off 
#vbell_msg "   Wuff  ----  Wuff!!  "

# use visual bell
#vbell off

# replace ctrl-A by ctrl-]
escape ^]]


# set a big scrolling buffer
defscrollback 5000

# Set the caption on the bottom line
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= %LD %d %LM - %c"
