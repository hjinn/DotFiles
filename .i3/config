set $mod Mod1

# ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# Use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier $mod

# default orientation
default_orientation auto

# workspace layout
workspace_layout default

# border style
new_window normal

# starts a new terminal
bindsym $mod+Shift+Return exec /usr/bin/gnome-terminal

# Mod1+Shift+q kills the current client
bindsym $mod+Shift+Q kill

# Mod1+v starts dmenu and launches the selected application
# for now, we don’t have a launcher of our own.
bindsym $mod+Shift+space exec /usr/bin/dmenu_run

# Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# (alternatively, you can use the cursor keys:)
bindsym Mod1+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

# Move (Mod1+Shift+h/j/k/l)
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# (alternatively, you can use the cursor keys:)
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym Control+Shift+v split v

# split in horizontal orientation
bindsym Control+Shift+h split h

# Fullscreen (Mod1+F10)
bindsym $mod+F10 fullscreen

# Stacking (Mod1+;)
bindsym $mod+semicolon layout stacking

# Tabbed (Mod1+Shift+w)
bindsym $mod+Shift+w layout tabbed

# Default (Mod1+Shift+e)
bindsym $mod+Shift+e layout default

# Toggle tiling/floating of the current window (Mod1+Shift+Space)
bindsym $mod+Control+Shift+space floating toggle

# change focus between tiling / floating windows (Mod1+tabkey)
bindcode $mod+23 focus mode_toggle

# focus the parent container
bindsym $mod+Shift+a focus parent

# Workspaces (Mod1+1/2/…)
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# Move to Workspaces
bindsym $mod+Control+1 move workspace 1
bindsym $mod+Control+2 move workspace 2
bindsym $mod+Control+3 move workspace 3
bindsym $mod+Control+4 move workspace 4
bindsym $mod+Control+5 move workspace 5
bindsym $mod+Control+6 move workspace 6
bindsym $mod+Control+7 move workspace 7
bindsym $mod+Control+8 move workspace 8
bindsym $mod+Control+9 move workspace 9
bindsym $mod+Control+0 move workspace 10


# Mod1+Shift+e exits i3
bindsym $mod+Control+Shift+Q exit

# Mod1+Shift+r restarts i3 inplace
bindsym $mod+Shift+R restart

# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.i3/ipc.sock

# focus follows mouse
focus_follows_mouse no

# focus parent
bindsym Control+Shift+p focus parent

# workspace setting
workspace_auto_back_and_forth no

workspace 1 output DVI-I-1
workspace 2 output DVI-I-1
workspace 3 output DVI-I-1
workspace 4 output DVI-I-1
workspace 5 output DVI-I-1
workspace 6 output DVI-I-2
workspace 7 output DVI-I-2
workspace 8 output DVI-I-2
workspace 9 output DVI-I-2
workspace 10 output DVI-I-2


# application's workspace setting
assign [class="(?i)firefox"] 10

# screen lock
bindsym Control+$mod+l exec i3lock -c 000000

mode "resize" {
# These bindings trigger as soon as you enter the resize mode

# They resize the border in the direction you pressed, e.g.
# when pressing left, the window is resized so that it has
# more space on its left

bindsym h resize shrink left 2 px or 2 ppt
bindsym Shift+H resize grow   left 2 px or 2 ppt

bindsym j resize shrink down 2 px or 2 ppt
bindsym Shift+J resize grow   down 2 px or 2ppt

bindsym k resize shrink up 2 px or 2 ppt
bindsym Shift+k resize grow   up 2 px or 2 ppt

bindsym l resize shrink right 2 px or 2 ppt
bindsym Shift+L resize grow   right 2 px or 2 ppt

# same bindings, but for the arrow keys
bindsym Left resize shrink left 2 px or 2 ppt
bindsym Shift+Left resize grow   left 2 px or 2 ppt

bindsym Down resize shrink down 2 px or 2 ppt
bindsym Shift+Down resize grow   down 2 px or 2 ppt

bindsym Up resize shrink up 2 px or 2 ppt
bindsym Shift+Up resize grow   up 2 px or 2 ppt

bindsym Right resize shrink right 2 px or 2 ppt
bindsym Shift+Right resize grow   right 2 px or 2 ppt

# back to normal: Enter or Escape
bindsym Return mode "default"
bindsym Escape mode "default"
}

bindsym $mod+F8 mode "resize"

# Volume control
bindcode Control+Shift+86 exec "amixer set Master 5%+"
bindcode Control+Shift+82 exec "amixer set Master 5%-"


